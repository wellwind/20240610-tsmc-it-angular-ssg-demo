{
  "name": "angular-ssg-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run generate-content-list && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postinstall": "npm run build:builders && npm run build:schematics && npm i ./builders && npm i ./schematics",
    "build:builders": "cd builders && npm run build",
    "build:schematics": "cd schematics && npm run build",
    "generate-content-list": "ng run angular-ssg-demo:generate-content-list",
    "generate-content-markdown": "ng g @ssg-demo/schematics:generate-content",
    "serve:ssr:angular-ssg-demo": "node dist/angular-ssg-demo/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.3",
    "@angular/common": "^18.0.3",
    "@angular/compiler": "^18.0.3",
    "@angular/core": "^18.0.3",
    "@angular/elements": "^18.0.3",
    "@angular/forms": "^18.0.3",
    "@angular/platform-browser": "^18.0.3",
    "@angular/platform-browser-dynamic": "^18.0.3",
    "@angular/platform-server": "^18.0.3",
    "@angular/router": "^18.0.3",
    "@angular/ssr": "^18.0.4",
    "@ssg-demo/builders": "file:builders",
    "@ssg-demo/schematics": "file:schematics",
    "express": "^4.18.2",
    "highlight.js": "^11.9.0",
    "js-yaml": "^4.1.0",
    "marked": "^12.0.2",
    "marked-highlight": "^2.1.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.4",
    "@angular/cli": "^18.0.4",
    "@angular/compiler-cli": "^18.0.3",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.3.1",
    "typescript": "~5.4.2"
  }
}